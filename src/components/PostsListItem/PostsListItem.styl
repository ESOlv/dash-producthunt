@import '~css/variables'

// Style de mon composant PostsListItem :
.posts-list-item
	flex-basis: 25%
	margin: 10px
	width: 500px
	text-align: center
	background-color: $white
	border-radius: 2px
	box-shadow: 2px 2px 5px $gray-gray
	img
		width: 100%
		height: 150px
		object-fit: cover;
	.posts-list-item-legend
		padding: 15px 0
		.posts-list-item-legend__upvotes
			color $gray-gray
			margin 20px 0
		.posts-list-item-legend__tagline
			margin: 10px
		.posts-list-item-legend-topic
			.posts-list-item-legend-topic__legend
				padding: 10px
			.posts-list-item-legend-topic-list__item
				display: inline-block
				padding: 10px
				margin: 5px
				background-color: $orange-flame-pea
				text-transform: uppercase
				a
					color: $white